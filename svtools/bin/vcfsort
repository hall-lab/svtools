#!/bin/bash

if [ ! -z "$1" ]
then
	if [ ! -z "$2" ]
	then
		awk '$0~"^#" { print $0; next } { print $0 | "sort -S 1G -k1,1V -k2,2n" }' $1 >$2
	else
		awk '$0~"^#" { print $0; next } { print $0 | "sort -S 1G -k1,1V -k2,2n" }' $1
	fi
else
	awk '$0~"^#" { print $0; next } { print $0 | "sort -S 1G -k1,1V -k2,2n" }' 
fi


